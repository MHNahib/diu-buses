<%- include("layout/dashboardHeader") %>
    <div class="container m-4">
        <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-12">
                            <h2>Request New Bus <b>Details</b></h2>
                        </div>
                    </div>
                </div>

                <!-- table  -->

                <div class="mt-4">
                    <div class="row">
                        <div class="col-12">
                            <%- include('./partials/messages') %>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="text-center">
                                            <th style="width: 5%" scope="col">#</th>
                                            <th style="width: 40%" scope="col">Route Name</th>
                                            <th style="width: 20%" scope="col">Status</th>
                                            <th style="width: 20%" scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <% for(var i=0; i < responce.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= i + 1 %>
                                                </th>
                                                <th scope="row">
                                                    <%= responce[i].routeName %>
                                                </th>
                                                <% if (responce[i].status) { %>
                                                    <td class="text-capitalize text-denger text-success">
                                                        <% } else{ %>
                                                    <td class="text-capitalize text-denger text-danger">
                                                        <% } %>
                                                            <b>
                                                                <%= responce[i].status %>
                                                            </b>
                                                    </td>

                                                    <td class="text-center">
                                                        <% if (!responce[i].status) { %>
                                                            <a href="/dashboard/request/<%= responce[i]._id %>"
                                                                type="button" class="btn btn-success d-inline"><i
                                                                    class="fas fa-plus"></i></a>
                                                            <% } %>
                                                                <form class="d-inline"
                                                                    action="/dashboard/request/<%= responce[i]._id %>?_method=DELETE"
                                                                    method="post">
                                                                    <button type="submit" class="btn btn-danger"><i
                                                                            class="far fa-trash-alt"></i></button>
                                                                </form>

                                                    </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <%- include("layout/dashboardFooter") %>