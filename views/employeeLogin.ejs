<%- include("layout/header") %>

    <div class="container features-type mb-4">
        <div class="row align-items-center m-3">

            <div class="col-lg-7 col-md-12 text-sec mb-lg-0 mb-5">
                <h2 class="primary-color bold">Welcome back</h2>
                <h5 class="primary-font mt-4 mb-4">Sign in to continue </h5>

                <%- include('./partials/messages') %>

                    <form action="/auth/employee/login" method="POST">
                        <div class="mb-3">
                            <label for="employeeId" class="form-label primary-font">Employee Id</label>
                            <input type="text" class="form-control" id="employeeId" name="employeeId"
                                aria-describedby="employeeIdHelp">
                            <div id="employeeIdHelp" class="form-text">We'll never share your email with anyone else.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label primary-font">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>

                        <!-- <button type="submit" class="btn-green mt-4">Continue</button> -->
                        <div class="mb-3 text-center">
                            <input style="border-radius: 0 !important;" type="submit" class="btn btn-color w-100  mt-2"
                                value="Login As Employee">
                        </div>

                        <div class="mb-3 text-center">
                            <a style="border-radius: 0 !important;" href="/auth/student/login"
                                class="btn btn-outline-success w-100  mt-1">Login As Student</a>
                        </div>
                        <div class="mb-3 text-center">
                            <a style="border-radius: 0 !important;" href="/auth/teacher/login"
                                class="btn btn-outline-danger w-100  mt-1">Login As Teacher</a>
                        </div>
                    </form>
            </div>

            <div class="col-lg-5 d-none d-lg-block ">
                <div class="card border-0 ">
                    <img src="/img/login.png" width="80%" class="img-fluid">
                </div>
            </div>
        </div>
    </div>



    <%- include("layout/footer") %>