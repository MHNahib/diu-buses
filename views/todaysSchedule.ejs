<%- include("layout/header") %>

    <div>
        <img style="width: 100%;" src="img/bus-schedule.gif" alt="" srcset="">

    </div>


    <div class="row m-4">
        <!-- <h4 class="text-center"></h4> -->
        <div class="content text-center">
            <h1 style="color: #000080 !important; font-family: 'Lobster', cursive; font-size: 2.9rem;" class="bold">
                Today's Schedule</h1>
        </div>
        <div class="container  table-responsive">
            <table class="table table-striped">
                <table class="table table-bordered">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">#</th>
                            <th scope="col">Route Name</th>
                            <th scope="col">Start &#x2192 Destination</th>
                            <th scope="col">Bus Number</th>
                            <th scope="col">Driver Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Time</th>
                            <th style="width: 10%" scope="col">Date</th>
                            <th scope="col">Availabe Seats</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < responce.length; i++) { %>
                            <tr>
                                <th scope="row">
                                    <%= i + 1 %>
                                </th>
                                <th scope="row">
                                    <%= responce[i].routeName %>
                                </th>
                                <td>
                                    <%= responce[i].start %> &#x2192 <%= responce[i].destination %>
                                </td>
                                <td>
                                    <%= responce[i].busName %>
                                </td>
                                <td>
                                    <%= responce[i].driverName %>
                                </td>
                                <td>
                                    <%= responce[i].phone %>
                                </td>
                                <td>
                                    <%= responce[i].startTime %>
                                </td>
                                <td>
                                    <%= responce[i].date.toISOString().slice(0, 10) %>
                                </td>
                                <td>
                                    <%= responce[i].availabeSeats %>
                                </td>

                            </tr>
                            <% } %>
                    </tbody>
                </table>
        </div>
    </div>




    <%- include("layout/footer") %>