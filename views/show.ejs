<%- include("layout/header") %>

    <div class="container">
        <div class="table-wrapper mt-4">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">


                        <h2>Bus <b>Details</b></h2>


                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="Content" class="Content">
        <div class="container">
            <div class="row">

                <% for(var i=0; i < responce.length; i++) { %>
                    <div class="col-md-4 p-2">
                        <div class="card w-100">
                            <img src="img/Buss.png" class="card-img-top w-80" alt="">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <b>Route:</b>
                                    <%= responce[i].routeName %>
                                </h5>
                                <h6 class="card-title">
                                    <b>
                                        <%= location.from %>
                                    </b> To <b>
                                        <%= location.to %>
                                    </b>
                                </h6>
                                <p class="card-text"><b>Bus Stoppages: &nbsp;</b>
                                    <br>
                                    <%= responce[i].busStoppages %>
                                        <br>
                                        <b>Driver Name: &nbsp;</b>
                                        <%= responce[i].driverName %>
                                            <br>
                                            <b>Phone: &nbsp;</b>
                                            <%= responce[i].phone %>
                                                <br>
                                                <b>Start Time: &nbsp; <%= responce[i].startTime %></b> <br>
                                                <b>Available seat(s): &nbsp; <%= responce[i].availabeSeats %></b> <br>
                                </p>
                                <a href="book-seat/<%= responce[i]._id %>?from=<%= location.from %>&to=<%= location.to %>"
                                    class="btn btn-primary w-100 text-center"> <i class="fa fa-bus"></i>
                                    &nbsp;&nbsp;&nbsp;Continue</a>
                            </div>
                        </div>
                    </div>

                    <% } %>
            </div>
        </div>
    </div>



    <%- include("layout/footer") %>