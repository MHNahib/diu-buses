    <!-- form  -->

    <div class="content text-center mt-4">
        <h1 class="primary-color bold">Book Bus Ticket</h1>
    </div>

    <div class="container features-type">
        <div class="row align-items-center me-4 ms-4 mb-4">
            <div class="col-lg-5 col-md-12  ">
                <div class="card border-0 ">
                    <img src="/img/bus-booking.png" class="img-fluid">
                </div>
            </div>

            <div class="col-lg-7 col-md-12 text-sec mb-lg-0 mb-5">

                <%- include('./partials/messages') %>

                    <form action="/search" method="post">
                        <div class="mb-3">
                            <label for="from-options" class="form-label primary-font bold primary-color ">From</label>
                            <input class="form-control" list="datalistOptions" name="start" id="from-options"
                                placeholder="Type Location" required>
                        </div>
                        <div class="mb-3">
                            <label for="to-options" class="to-label primary-font bold primary-color ">To</label>
                            <input class="form-control" list="datalistOptions" name="destination" id="to-options"
                                placeholder="Type Location" required>
                        </div>
                        <!-- location list  -->
                        <datalist id="datalistOptions">
                            <% for(var i=0; i < responce.length; i++) { %>
                                <option value=" <%= responce[i] %>">
                                    <% } %>
                        </datalist>


                        <!-- time picker  -->
                        <div class="mb-3">
                            <label for="timepicker" class="to-label primary-font bold primary-color ">Time</label>
                            <input type="time" id="timepicker" name="startTime" class="form-control timepicker"
                                required>

                        </div>
                        <div class="mb-3 text-center">
                            <input type="submit" style="border-radius: 0 !important;" class="btn btn-color w-100  mt-2"
                                value="Search Buses">
                        </div>

                    </form>


            </div>


        </div>
    </div>










