<%- include("layout/header") %>
    <div class="container-fluid" style="background: rgb(0,77,124);
background: linear-gradient(90deg, rgba(0,77,124,1) 0%, rgba(8,14,51,1) 35%, rgba(73,19,56,1) 100%);">


        <div class="container features-type">
            <div class="row align-items-center me-3 ms-3 mt-0 pb-3">

                <div class="col-lg-7 col-md-12 text-sec mb-lg-0 mb-5">
                    <h2 class="text-white bold text-center bold"
                        style="font-family: 'Lobster', cursive; font-size: 2.9rem;">Reset Password</h2>
                    <h5 class="primary-font text-center text-white mt-4 mb-4">Reset password for <b>
                            <%= email %>
                        </b></h5>

                    <%- include('./partials/messages') %>

                        <form method="POST">
                            <div class="mb-3">
                                <label for="password" class="form-label  text-white primary-font">Password</label>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>

                            <div class="mb-3 text-center">
                                <input style="border-radius: 0 !important;" type="submit"
                                    class="btn btn-color w-100  mt-2" value="Reset Password">
                            </div>


                        </form>
                </div>

                <div class="col-lg-5 d-none d-lg-block ">
                    <div class="card border-0 ">
                        <img src="/img/login2.jpeg" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>



    <%- include("layout/footer") %>