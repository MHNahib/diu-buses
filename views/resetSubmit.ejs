<%- include("layout/header") %>

    <div class="container features-type mb-4">
        <div class="row align-items-center m-3">

            <div class="col-lg-7 col-md-12 text-sec mb-lg-0 mb-5">
                <h2 class="primary-color bold">Reset Password</h2>
                <h5 class="primary-font mt-4 mb-4">Reset password for <b>
                        <%= email %>
                    </b></h5>

                <%- include('./partials/messages') %>

                    <form method="POST">
                        <div class="mb-3">
                            <label for="password" class="form-label primary-font">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>

                        <div class="mb-3 text-center">
                            <input style="border-radius: 0 !important;" type="submit" class="btn btn-color w-100  mt-2"
                                value="Reset Password">
                        </div>


                    </form>
            </div>

            <div class="col-lg-5 d-none d-lg-block ">
                <div class="card border-0 ">
                    <img src="/img/login.png" width="80%" class="img-fluid">
                </div>
            </div>
        </div>
    </div>



    <%- include("layout/footer") %>